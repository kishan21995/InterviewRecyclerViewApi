<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="horizontal"
    android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_height="120dp">

        <LinearLayout

            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/logoID1"
                android:layout_marginLeft="10dp"
                android:layout_width="100dp"
                android:layout_height="120dp"
                android:src="@drawable/veg"
                android:layout_marginTop="4dp" />
        </LinearLayout>

        <LinearLayout

            android:orientation="vertical"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/text_tv11"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="UP TO 69% OFF"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="80dp"/>


            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/text_tv22"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Grocery and Staples"
                android:textSize="15dp"
                android:textStyle="bold"
                android:layout_marginLeft="80dp"/>


            <TextView
                android:id="@+id/text_tv33"
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="pulse,Atta other Flours"
                android:textSize="12dp"
                android:textStyle="bold"
                android:layout_marginLeft="80dp"/>


        </LinearLayout>
        <LinearLayout
            android:layout_marginLeft="320dp"
            android:orientation="horizontal"
            android:layout_width="50dp"
            android:layout_height="120dp">

            <View
                android:layout_width="1px"
                android:layout_height="wrap_content"
                android:background="@color/view_color" />

            <ImageView
                android:id="@+id/arrow2"
                android:layout_width="17dp"
                android:layout_height="14dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:background="@drawable/ic_down_black" />

        </LinearLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>